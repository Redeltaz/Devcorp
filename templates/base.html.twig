<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href=" {{ asset("css/navbar.css") }}">
        <link rel="stylesheet" href=" {{ asset("css/style.css") }}">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav>
            <div id="navbar-images">
                <img id="responsive-button" src="{{ asset("images/burger-icon.png") }}">      
                <img id="image-logo" src="{{ asset("images/logo.png") }}">
                <img id="responsive-search" src="{{ asset("images/search-icon.png") }}">      
            </div>
            <div id="navbar-content">
                <a href=" {{ path("home") }}"><p>Accueil</p></a>
                <a href=" {{ path("forum_home") }}"><p>Forum</p></a>
                <a><p>Cours</p></a>
                <a><p>Equipe</p></a>
                <input type="text" id="search-bar" name="search-bar" placeholder="RECHERCHER">
                {% if user is same as(NULL) %}
                    <a href=" {{ path("connexion") }}"><p>Connexion</p></a>
                    <a href=" {{ path("inscription") }}"><p>Inscription</p></a>
                {% else %}
                    <a href=" {{ path('profile') }}"><p>Profile</p></a>
                    <a href=" {{ path("deconnexion") }}"><p>Deconnexion</p></a>
                {% endif %}
            </div>
        </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        <script src="{{ asset('js/main.js') }}"></script>
    </body>
</html>
